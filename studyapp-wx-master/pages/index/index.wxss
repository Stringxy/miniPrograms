/*
  navigation
*/
.nav{
  width: 100%;
  height: 30px;
  white-space: nowrap;
  line-height: 30px;
  color: #fff;
  background: #333;
  border-bottom: 1px solid #e7e7e7;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
}
.nav-a{
  display: inline-block;
  font-size: 14px;
  font-weight: bold;
  padding: 0 10px;
}
.nav-cur{
  color: #fff;
  background-color: #666;
}

/*
  topics list
*/
.topics{
  padding: 30px 10px 10px 10px;
  box-sizing: border-box;
}
.topics-item{
  font-size: 12px;
  display: flex;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
}
.topics-avatar{
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin-right: 5px;
}
.topics-title{
  height: inherit;
  line-height: 30px;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.topics-reply{
  width: 38px;
  height: 16px;
  color: #999;
  background: #f5f5f5;
  border-radius: 10px;
  line-height: 16px;
  text-align: center;
  margin-left: 5px;
  margin-top: 7px;
}