/** question.wxss **/

.question {
    position: absolute;
    top: 10%;
    left: 10%;
    width: 80%;
    bottom: 0;
    color: white;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
}

.choices {
    position: absolute;
    top: 16%;
    left: 3%;
    width: 97%;
}

.choices label {
    display: block;
    padding: 20rpx 0;
    position: relative;
}

.choices text {
    position: absolute;
    top: 50%;
    left: 70rpx;
    transform: translateY(-50%);
}

.countDown {
    position: absolute;
    left: 20%;
    width: 60%;
    bottom: 10%;
    text-align: center;
}

.nextQuestion {
    font-size: 42rpx;
    color: white;
    width: 70%;
    border: 6rpx solid white;
    line-height: 2;
    border-radius: 12rpx;
    margin: 0 auto;
}

.ico-clock {
    width: 25rpx;
    height: 25rpx;
    margin: 0 10rpx -1rpx 0;
}

.countDown text {
    color: #fce803;
    font-size: 24rpx;
}