/* pages/userMsg/userMsg.wxss */
/*
  msgs list
*/
.msgs{
  padding: 0 10px 10px 10px;
  box-sizing: border-box;
}
.msgs-item{
  font-size: 12px;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
}
.msgs-item-inner{
  display: flex;
}
.msgs-avatar{
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin-right: 5px;
}
.msgs-title{
  height: inherit;
  line-height: 30px;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.msgs-readflag{
  width: 38px;
  height: 16px;
  color: #999;
  background: #f5f5f5;
  border-radius: 10px;
  line-height: 16px;
  text-align: center;
  margin-left: 5px;
  margin-top: 7px;
}
.msgs-readflag-red{
  background-color: crimson;
  color: #fff;
}
.msgs-content{
  padding: 10px;
  background: #eee;
  border-radius: 4px;
  margin: 5px 0 0;
}