/**app.wxss**/

.full-page {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.full-page .background {
    position: absolute;
    width: 100%;
    height: 100%;
}

.full-page .round-button {
    position: absolute;
    left: 50%;
    bottom: 32rpx;
    width: 128rpx;
    height: 128rpx;
    transform: translateX(-50%);
}

.full-page .tip-close {
    position: absolute;
    width: 47rpx;
    height: 47rpx;
    top: 20rpx;
    right: 20rpx;
}

.floatWindow {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
}

.floatWindow .floatBox {
    color: white;
    box-sizing: border-box;
    padding: 40rpx;
    border-radius: 20rpx;
    position: absolute;
    top: 40%;
    left: 50%;
    width: 80%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, .5);
}

.floatWindow .title {
    text-align: center;
    font-size: 48rpx;
    padding-bottom: 10rpx;
}

.floatWindow .content {
    font-size: 36rpx;
    padding-top: 10rpx;
}

/**app.wxss**/
.container {
  box-sizing: border-box;
  word-break: break-all;
  overflow: hidden;
}


.form{
  padding: 10px;
}
.form-input,
.form-textarea{
  font-size: 14px;
  border-bottom: 1px solid #eee;
  margin-bottom: 12px;
  padding: 5px 0;
}
.form-textarea{
  width: 100%;
  border: 1px solid #eee;
  border-radius: 4px;
}
.form-picker{
  font-size: 14px;
  position: relative;
  margin-bottom: 12px;
  border-bottom: 1px solid #eee;
  padding: 5px 0;
}
.form-picker-arrow{
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -13px;
  width: 16px;
  height: 16px;
  display: inline-block;
  text-align: right;
  transform: rotate(90deg);
  color: #666;
}



.tip{
    font-size: 12px;
    color: #666;
    padding: 10px;
    background-color: #f1f1f1;
}

